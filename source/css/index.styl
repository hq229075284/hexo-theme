@import './_*.styl';

.page-big-banner 
    height: 100vh;
    margin-top: - $page-header-height;
    position: relative;

    &::after 
        content: '';
        position: absolute;
        bottom: 0;
        height: 50px;
        left: 0;
        border-left: 50vw solid #fff;
        border-right: 50vw solid transparent;
        border-bottom: 25px solid #fff;
        border-top: 25px solid transparent;
    

    .carousel, .carousel-inner, .carousel-item 
        height: 100%;
    

    #full-page-carousel 
        .carousel-indicators 
            margin-right: 5%;
            justify-content: flex-end;
        

        .carousel-item img 
            width: 100%;
            height: 100%;
            object-fit: cover;
        
    

    .carousel-abstract-block 
        position: absolute;
        left: 10%;
        top: 50%;
        transform: translateY(-40%);
        height: 50vh;
        width: 40%;
        overflow: hidden;
        padding: 16px;
        background-color: #ececece0;
        border-radius: 10px;
    


.post-container
    .recent-post,.all-post
        .title
            font-size: 20px
            margin-bottom: 16px
        
    .index-page-post
        position relative
        margin-bottom: 15px;
        box-shadow: 0 1px 3px #a2a2a2;
        border-radius: 4px
        transition: all 300ms linear
        &:hover
            transform: scale(1.02)
        
        &::before
            content: ''
            padding-top: 100%;
            width: 100%;
            display: block
        .content
            overflow hidden
            position: absolute
            top:8px;
            left 8px
            bottom: 8px
            right 8px
            
    