@import './_*.styl';

.page-big-banner 
    height: 100vh;
    margin-top: - $page-header-height;
    position: relative;

    &::after 
        content: '';
        position: absolute;
        bottom: 0;
        height: 50px;
        left: 0;
        border-left: 50vw solid #fff;
        border-right: 50vw solid transparent;
        border-bottom: 25px solid #fff;
        border-top: 25px solid transparent;
    

    .carousel, .carousel-inner, .carousel-item 
        height: 100%;
    

    #full-page-carousel 
        .carousel-indicators 
            margin-right: 5%;
            justify-content: flex-end;
        

        .carousel-item img 
            width: 100%;
            height: 100%;
            object-fit: cover;
        
    

    .carousel-abstract-block 
        position: absolute;
        left: 10%;
        top: 50%;
        transform: translateY(-40%);
        height: 50vh;
        width: 40%;
        overflow: hidden;
        padding: 16px;
        background-color: #ececece0;
        border-radius: 10px;
    

$hover-offset=10px
$img-width=100px
$img-gap=8px
$post-height=300px
$post-hover-offset=160px
$content-padding=16px
.post-container
    .recent-post,.all-post
        .title
            font-size: 20px
            margin-bottom: 38px
        
    .index-page-post
        position relative
        // margin-bottom: 15px;
        box-shadow: 0 0px 3px 1px #a2a2a2;
        border-radius: 2px
        transition: all 300ms linear
        height: $post-height;
        background-color: #fff;
        &:hover
            height: $post-height + $post-hover-offset;
            margin-bottom: - $post-hover-offset;
            // margin: - $hover-offset;
            // padding: $hover-offset;
            // .content
            //     top:$hover-offset + 8px
            //     left:$hover-offset + 8px
            //     bottom: $hover-offset + 8px
            //     right $hover-offset + 8px
            > .img
                height: $post-height + $post-hover-offset - 10px;
        > .img
            position: absolute;
            left: $img-gap;
            top: -22px;
            height: $post-height - 10px;
            width: $img-width;
            box-shadow: 0 0px 3px 1px #a2a2a2;
            background-color: #fff;
            transition: all 300ms linear
            background-position: 0 0;
            background-size: cover;
            border-radius: 6px;
